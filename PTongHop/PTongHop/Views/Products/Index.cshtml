@model IEnumerable<PTongHop.Model.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .col-md-3 {
        width: 16%;
    }

    .product-card {
        border-radius: 1px;
    }
</style>

<div class="row bg-white">
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6 col-xs-12">
            <a asp-controller="Cart" asp-action="Add" asp-route-id="@item.Id">
                <div class="product-card">
                    <div class="product-cart-box-img">
                        <img src="/image/products/@item.Image" alt="@item.Title" class="product-card-img">
                    </div>
                    <div class="product-card-content">
                        <h6><a href="/product/@item.Id">@item.Title</a></h6>
                        <p class="old-price">@string.Format("{0:#,##0}", @item.PriceOld) VND</p>
                        <p class="new-price">@string.Format("{0:#,##0}", @item.PriceNew) VND</p>

                    </div>
                </div>
            </a>
        </div>
    }
</div>

